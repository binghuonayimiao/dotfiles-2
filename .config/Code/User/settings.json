{
    "window.titleBarStyle": "custom",
    "editor.fontFamily": "Fira Code",
    "editor.wordWrap": "wordWrapColumn",
    "editor.fontLigatures": true,
    "workbench.colorTheme": "Monokai",
    "workbench.statusBar.feedback.visible": false,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontFamily": "Ricty Diminished Discord for powerline",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.normal": "line",
    "vim.cursorStylePerMode.replace": "line",
    "vim.cursorStylePerMode.visual": "line",
    "vim.cursorStylePerMode.visualblock": "block",
    "vim.cursorStylePerMode.visualline": "underline",
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.fontSize": 18,
    "explorer.confirmDelete": false,
    "python.linting.enabled": false,
    "editor.scrollBeyondLastLine": false,
    "explorer.confirmDragAndDrop": false,
    "window.zoomLevel": 0,
    "git.confirmSync": false,
    "git.autofetch": true,
    "[javascript]": {
        "editor.tabSize": 2,
    },
    "workbench.iconTheme": "material-icon-theme",
    "auto-close-tag.SublimeText3Mode": true,
    "auto-close-tag.fullMode": true,
    "auto-close-tag.activationOnLanguage": [
        "xml",
        "php",
        "blade",
        "ejs",
        "jinja",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "plaintext",
        "vue",
        "liquid",
        "erb",
        "lang-cfml",
        "cfml",
        "HTML (Eex)"
    ],
    "[html]": {
        "editor.tabSize": 2,
    },
    "editor.tokenColorCustomizations": {
        "comments": "#a1a1a1"
    },
    "editor.autoClosingBrackets": "always",
    "editor.detectIndentation": false,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "git.enableSmartCommit": true,
    "editor.overviewRulerLanes": 1,
    "gitlens.blame.heatmap.location": "left",
    "gitlens.currentLine.scrollable": false,
    "[css]": {
        "editor.tabSize": 2,
    },
    "window.restoreWindows": "none"
}